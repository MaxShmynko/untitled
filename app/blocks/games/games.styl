.games
    width 100vw
    height 100vh
    background-color #750704
    overflow hidden

    &__wrap
        position relative
        height 100%
        min-height w(500)
        padding-bottom w(20)
        
    &__gam
        width 100%
        height 100%

    &__modal-overlay
        display: none;
        background: rgba(0, 0, 0, 0.8);
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;

    &__email
        width w(785)
        height w(50)
        margin-top w(55)
        padding-left w(10)

    &__text
        color $c-vinous
        text-align center
        font-family $ff-Aeroport
        font-size w(20)
        font-weight 700
        line-height w(27)

    &__field
        display flex
        color $c-vinous
        font-family $ff-Aeroport
        font-size w(15)
        margin-top w(25)

    &__input
        width w(22)
        height w(22)
        margin-right w(10)


    &__button
        text-align center
        font-family $ff-Dobrozrachniy
        font-size w(40)
        background $c-vinous
        width w(195)
        height w(73)
        padding-bottom w(10)
        margin-top w(15)
        border-radius 10px
        color $c-zolato 
        border 3px solid $c-zolato

    &__modal__wrap
        display flex
        flex-direction column
        align-items center
        padding 10% 28% 10% 28%
        border 10px solid $c-vinous
        background $c-yellowish
        height 100vh


    &__restart
        margin-left w(20)
        text-align center
        font-family $ff-Dobrozrachniy
        font-size w(40)
        background $c-vinous
        width w(240)
        height w(73)
        padding-bottom w(10)
        margin-top w(15)
        border-radius 10px
        color $c-zolato 
        border 3px solid $c-zolato

    &__wrap__button
        display flex
        flex-direction row
        justify-content flex-start

.game {
  transform-style: preserve-3d;
  perspective: 500px;
  min-height: 100%;
  height: 100%;
}
        

.card {
  float left
  width 25vw
  height 25vh
  text-align center
  display block
  perspective w(500)
  position relative
  cursor pointer
  z-index 50
}

.card .inside {
  width: 100%;
  height: 100%;
  display: block;
  transform-style: preserve-3d;
  transition: 0.4s ease-in-out;
  background: white;
}

.card .front, .card .back {
    -webkit-backface-visibility: hidden;
    backface-visibility: hidden;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.card .front img, .card .back img {
  width: 100%;
  display: block;
  margin: 0 auto;
  height: 100%;
}

.card .front {
  transform: rotateY(-180deg);
}

.card .inside.picked, .card .inside.matched {
  transform: rotateY(180deg);
}

@keyframes matchAnim {
  0% {
    background: #bcffcc;
  }
  100% {
    backgroud: white;
  }
}

@-webkit-keyframes matchAnim {
  0% {
    background: #bcffcc;
  }
  100% {
    background: white;
  }
}

.card .inside.matched {
  -webkit-animation: 1s matchAnim ease-in-out;
          animation: 1s matchAnim ease-in-out;
  -webkit-animation-delay: 0.4s;
          animation-delay: 0.4s;
}

.modal {
  display: none;
  position: relative;
  width: 500px;
  height: 300px;
  max-height: 90%;
  max-width: 90%;
  min-height: 380px;
  margin: 0 auto;
  background: white;
  top: 50%;
  transform: translateY(-50%);
  padding: 30px 10px;
}

.modal .restart:hover{
  background: linear-gradient(#222, black);
  }
  

.modal .message{
    text-align center
}
  